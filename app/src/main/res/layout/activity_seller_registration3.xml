<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SellerRegistrationActivity3">

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:elevation="8dp"

        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/text1Rl"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/CRTv"
                    android:text="Seller Registration :"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/timeview"
                android:layout_below="@id/text1Rl"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/colorGrey"
                    app:cardCornerRadius="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                </androidx.cardview.widget.CardView>
                <View


                    android:background="@color/colorAccent"
                    android:layout_width="100dp"
                    android:layout_height="10dp">

                </View>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="40dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                </androidx.cardview.widget.CardView>
                <View


                    android:background="@color/colorAccent"
                    android:layout_width="100dp"
                    android:layout_height="10dp">

                </View>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/colorGrey"
                    app:cardCornerRadius="40dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/timeview"
                android:id="@+id/timeviewtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Owner Details"
                    android:textSize="12dp"
                    android:id="@+id/profileDetails"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:text="Vehicle Details"
                    android:textSize="12dp"
                    android:id="@+id/VehicleDetails"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/profileDetails"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:text="Preview And \n      Submit"
                    android:textSize="12dp"
                    android:id="@+id/PreviewAndSubmit"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/VehicleDetails"
                    android:layout_marginLeft="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>
            <ImageView
                android:id="@+id/imgback"
                android:layout_below="@id/timeviewtext"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="100dp">

            </ImageView>

            <ImageView

                android:id="@+id/imgProfile"
                android:layout_below="@id/timeviewtext"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/image_border"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_width="120dp"
                android:layout_height="120dp">

            </ImageView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgProfile"
                android:layout_marginLeft="10dp"
                android:text="Sastha Hyper Mall"
                android:textSize="20dp"
                android:id="@+id/placeName"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView


                android:layout_toRightOf="@id/imgProfile"
                android:layout_marginLeft="10dp"
                android:text="hcgsiuagcbajc jdbsjda"
                android:id="@+id/address"
                android:textColor="@android:color/black"

                android:layout_below="@id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView


                android:layout_toRightOf="@id/imgProfile"
                android:layout_marginLeft="10dp"
                android:text="12345678"

                android:textColor="@android:color/black"

                android:layout_below="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView



                android:layout_marginLeft="30dp"
                android:text="Owner Details"
                android:id="@+id/ownerdetText"
                android:textSize="20dp"
                android:textColor="@android:color/black"

                android:layout_below="@id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:id="@+id/nameText"
                android:textStyle="bold"

                android:layout_below="@id/ownerdetText"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/ownerdetText"
                android:layout_toRightOf="@id/nameText"

                android:text="ABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:id="@+id/AddressText"
                android:textStyle="bold"

                android:layout_below="@id/nameText"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/nameText"
                android:layout_toRightOf="@id/nameText"

                android:text="ABSGDD@6332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:id="@+id/Mobiletext"
                android:textStyle="bold"

                android:layout_below="@id/AddressText"
                android:text="Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/AddressText"
                android:layout_toRightOf="@id/Mobiletext"

                android:text="46474568493"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:id="@+id/EmailId"
                android:textStyle="bold"

                android:layout_below="@id/Mobiletext"
                android:text="Email ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/Mobiletext"
                android:layout_toRightOf="@id/nameText"

                android:text="vikashkmr519@gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:id="@+id/AadharID"
                android:textStyle="bold"

                android:layout_below="@id/EmailId"
                android:text="Aadhar ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/EmailId"
                android:layout_toRightOf="@id/nameText"
                android:id="@+id/phone"

                android:text="22345345"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>



            <CheckBox
                android:id="@+id/checkbox"
                android:layout_below="@id/phone"
                android:layout_marginLeft="30dp"
                android:text="I have read and Agreed with the Terms and Condition"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </CheckBox>
            <Button
                android:layout_below="@id/checkbox"
                android:layout_centerHorizontal="true"
                android:text="Submit"
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>